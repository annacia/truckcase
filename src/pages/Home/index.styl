#home
    #bg-home
        width: 100%
        height: 100vh
        position: relative

        .image
            background-image: url('/img/lg-bg.jpg')
            background-size: cover
        
        .overlay
            z-index: 2
            background-color: #0000006e

        .overlay, .image
            width: 100%
            height: 100%
            position: absolute

        .content
            position: absolute
            width: 50%
            min-height: 200px
            margin-top: 200px
            margin-left: 25%
            color: #fff
            z-index: 3

            h1 
                text-align: center
                display: block
                margin: 15px auto
                font-size: 25px

            p
                text-align: center        
            

            button
                display: block
                text-align: center
                width: 100%
                background-color: transparent
                border-color: #fff
                color: #fff
                font-weight: 500
                z-index: 3
                padding: unset;
                
                &:hover
                    background-color: #fff
                    a
                        color: #000
                
                a
                    color: #fff
                    text-decoration: none
                    width: 100%;
                    height: 100%;
                    display: block;
                    padding: 5px;
