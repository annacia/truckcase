#list
    width: 100%
    padding-bottom: 40px

    h1
        padding: 100px 0 25px 0;
        font-size: 20px;
        text-align: center;

#filter
    width 90%
    margin 0 auto
    margin-bottom: 10px;
    
    span
        padding-left: 5px;

    button
        width: 40px;
        height: 40px;
        padding: 6px;
        background-color: #ffd538;
        border: 2px solid #000;
        color:  #000
        font-size: 20px;
        padding-top: 4px;

        &:hover
            background-color: #000;
            color: #ffd538

.modal-filter

    .btn-filter, .btn-clear
        width: 100%;

    .btn-filter 
        background-color: #fff
        border: 1px solid #000
        color: #000

        &:hover
            background-color: #000
            color: #fff

    .btn-clear
        background-color #fff
        border-color: #6c757d
        color: #6c757d

        &:hover
            background-color: #6c757d
            color: #fff

    input, select 
        border: 1px solid #000
